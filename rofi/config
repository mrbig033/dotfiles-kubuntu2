! Set Theme
rofi.theme: /usr/share/rofi/themes/gruvbox-dark.rasi

! "Select previous entry" Set from: Default
rofi.kb-row-up:                      Super+p,Up,Control+p,ISO_Left_Tab

! "Select next entry" Set from: Default
rofi.kb-row-down:                    Super+n,Control+n,Down

! "Go to next row, if one left, accept it, if no left next mode." Set from: Default
rofi.kb-row-tab:                     Super+Tab,Super+apostrophe,Pause

! "Quit rofi" Set from: Default
rofi.kb-cancel:                      Escape

! "Accept entry" Set from: Default
rofi.kb-accept-entry:                Control+j,Control+m,Return,KP_Enter,Tab,Super+m

! "Switch to the next mode." Set from: Default
rofi.kb-mode-next:                   Shift+Right,Control+Tab
